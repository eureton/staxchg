<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="DEFAULT" class="ch.qos.logback.core.FileAppender">
    <file>.dev.log</file>
    <encoder>
      <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSS000Z} [%.-10thread] %-5level %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="DEFAULT" />
  </root>
</configuration>
